<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentZoomAlert">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/iv_background_zoom"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_input_img" />


    <TextView
        android:id="@+id/tv_nom_ajout_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autofillHints="@string/nomCompagnon"
        android:ems="10"

        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Dogo"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_background_zoom"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iv_background_zoom"
        app:layout_constraintTop_toBottomOf="@+id/iv_background_zoom" />

    <TextView
        android:id="@+id/tv_date_perte_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="2024/06/06"
        app:layout_constraintEnd_toEndOf="@+id/tv_nom_ajout_zoom"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_nom_ajout_zoom"
        app:layout_constraintTop_toBottomOf="@+id/tv_nom_ajout_zoom" />


    <TextView
        android:id="@+id/tv_nom_maitre_zoom"
        android:layout_width="163dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"

        android:ems="10"

        android:fontFamily="@font/inter_semibold"

        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Antoine ALex"
        app:layout_constraintEnd_toEndOf="@+id/tv_date_perte_zoom"
        app:layout_constraintStart_toStartOf="@+id/tv_date_perte_zoom"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_perte_zoom" />

    <TextView
        android:id="@+id/tv_description_zoom"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/description"
        android:background="@drawable/bg_carte"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_appeler_zoom" />

    <ImageView
        android:id="@+id/iv_compagnon_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dogo"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background_zoom"
        app:layout_constraintEnd_toEndOf="@+id/iv_background_zoom"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/iv_background_zoom"
        app:layout_constraintTop_toTopOf="@+id/iv_background_zoom"
        app:layout_constraintVertical_bias="0.409" />

    <Button
        android:id="@+id/bt_appeler_zoom"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_signup"
        android:text="Appeler"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nom_maitre_zoom" />


</androidx.constraintlayout.widget.ConstraintLayout>