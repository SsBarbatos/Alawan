<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_log" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="69dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/logo_1" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ic_mail"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/email"
        android:inputType="text"
        android:textColor="@color/GreenText"
        android:textColorHighlight="@color/GreenText"
        android:textColorHint="@color/GreenText"
        android:textColorLink="@color/GreenText"
        android:textStyle="bold"
        app:boxBackgroundMode="none"

        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNom"
        app:layout_constraintVertical_bias="0.003"
        app:underlineColorAndroid="transparent" />

    <EditText
        android:id="@+id/etCpwd"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ic_mdp"
        android:drawableLeft="@drawable/ic_mdp"
        android:drawableEnd="@drawable/ic_hide"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="Confirmer le mot de passe"
        android:inputType="textPassword"
        android:textColor="@color/GreenText"
        android:textColorHighlight="@color/GreenText"
        android:textColorHint="@color/GreenText"
        android:textColorLink="@color/GreenText"
        android:textStyle="bold"
        app:boxBackgroundMode="none"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        app:layout_constraintVertical_bias="0.0"
        app:underlineColorAndroid="transparent" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ic_mdp"
        android:drawableLeft="@drawable/ic_mdp"
        android:drawableEnd="@drawable/ic_hide"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="@color/GreenText"
        android:textColorHighlight="@color/GreenText"
        android:textColorHint="@color/GreenText"
        android:textColorLink="@color/GreenText"
        android:textStyle="bold"
        app:boxBackgroundMode="none"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMail"
        app:layout_constraintVertical_bias="0.003"
        app:underlineColorAndroid="transparent" />

    <EditText
        android:id="@+id/etNom"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ic_person"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/nom"
        android:inputType="text"
        android:textColor="@color/GreenText"
        android:textColorHighlight="@color/GreenText"
        android:textColorHint="@color/GreenText"
        android:textColorLink="@color/GreenText"

        android:textStyle="bold"
        app:boxBackgroundMode="none"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.035"
        app:underlineColorAndroid="transparent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="92dp"
        android:fontFamily="@font/inter_black"
        android:text="Creer un compte "
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.348" />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btnf"
        android:fontFamily="@font/inter_semibold"
        android:text="Creer mon compte"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCpwd"
        app:layout_constraintVertical_bias="0.157" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Vous avez deja un compte ?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintVertical_bias="0.092" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="Se connecter"

        android:textColor="@color/GreenText"
        android:textColorLink="@color/GreenText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintVertical_bias="0.092" />

</androidx.constraintlayout.widget.ConstraintLayout>