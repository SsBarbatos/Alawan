<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inscription">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="432dp"
        android:layout_height="754dp"
        android:contentDescription="@string/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/BackgroundAlawan" />

    <EditText
        android:id="@+id/etNom"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/nom"
        android:inputType="text"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/logoMail"
        app:layout_constraintEnd_toStartOf="@+id/etNom"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839"
        app:srcCompat="@drawable/baseline_person_outline_24" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etMdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMdp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etMdpConf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMdpConf"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="152dp"
        android:ems="10"
        android:hint="@string/confirmerPassword"
        android:inputType="textPassword"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/logoMdp1"
        app:layout_constraintEnd_toStartOf="@+id/etMail"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mail_logo" />

    <ImageView
        android:id="@+id/logoMdp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="460dp"
        app:layout_constraintEnd_toStartOf="@+id/etMdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/password_logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etMdpConf"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMdp1"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/password_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creerCompteTitre"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etNom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/inscrire"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924" />

</androidx.constraintlayout.widget.ConstraintLayout>