<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/BackgroundAlawan"
    tools:context=".Inscription">

    <EditText
        android:id="@+id/etMdpConf"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/confirmerPassword"
        android:inputType="textPassword"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icNom"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toStartOf="@+id/etNom"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/creerCompteTitre"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etNom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#BE000000"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etMdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMdp"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#BE000000"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etMdpConf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etNom"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/nom"
        android:inputType="text"
        android:textColor="@color/vertFonce"
        android:textColorHighlight="@color/vertPale"
        android:textColorHint="@color/vertFonce"
        android:textColorLink="@color/vertPale"
        android:textStyle="bold"
        app:boxBackgroundMode="none"
        app:layout_constraintBottom_toTopOf="@+id/etMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:underlineColorAndroid="transparent" />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/btnSignup"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/inscrire"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889" />

    <ImageView
        android:id="@+id/icMdpConf"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etMdpConf"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_mdp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/etMail"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icNom"
        app:srcCompat="@drawable/ic_mail" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/etMdp"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/ic_mdp" />

</androidx.constraintlayout.widget.ConstraintLayout>